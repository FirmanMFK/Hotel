<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_item_list_room_type"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:background="@color/grey_200"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/img_item_list_room_type"
        android:padding="10dp"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room Type"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/txt_item_list_room_type"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room Remarks"
            android:textSize="13sp"
            android:textColor="@color/grey_400"
            android:id="@+id/txt_item_list_room_remarks"
            android:layout_marginBottom="35dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room Rate"
            android:textSize="22sp"
            android:textColor="@color/blue_a_700"
            android:id="@+id/txt_item_list_room_rate"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
</RelativeLayout>